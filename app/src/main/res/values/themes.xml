<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Cold start theme -->
    <style name="ColdStart" parent="Theme.BloodBank">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:statusBarColor">#FF3355</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.BloodBank" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColorDark</item>
        <item name="colorOnPrimary">@color/accentTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColorDark</item>
        <item name="colorOnSecondary">@color/accentTextColor</item>
        <!-- Color Themes -->
        <item name="colorSurface">@color/surfaceColor</item>
        <item name="colorError">@color/errorColor</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="colorOnSurface">@color/primaryTextColor</item>
        <item name="colorOnError">@color/accentTextColor</item>
        <!-- Custom Color Themes -->
        <item name="colorTextPrimary">@color/primaryTextColor</item>
        <item name="colorTextSecondary">@color/secondaryTextColor</item>
        <item name="colorTextAccent">@color/accentTextColor</item>
        <item name="colorTextDisabled">@color/disabledColor</item>
        <item name="colorBorder">@color/borderColor</item>
        <item name="colorSuccess">@color/successColor</item>
        <item name="colorInfo">@color/infoColor</item>
        <item name="colorWarn">@color/warnColor</item>
        <item name="colorLoaderBackground">@color/loaderBackground</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">?attr/isLightTheme</item>
        <!-- Widget Themes -->
        <item name="materialButtonStyle">@style/Widget.BloodBank.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.BloodBank.Button.Outlined</item>
        <!-- Text Themes -->
        <item name="textAppearanceHeadline4">@style/TextAppearance.BloodBank.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.BloodBank.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.BloodBank.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.BloodBank.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.BloodBank.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.BloodBank.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.BloodBank.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.BloodBank.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.BloodBank.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.BloodBank.Overline</item>
    </style>

    <!-- Widget Styles -->
    <style name="Widget.BloodBank.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="backgroundTint">@color/button_background_tint</item>
    </style>

    <style name="Widget.BloodBank.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="strokeColor">?attr/colorPrimary</item>
    </style>

    <style name="Widget.BloodBank.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorEnabled">true</item>
        <item name="boxStrokeColor">@color/text_input_stroke_color</item>
        <item name="boxStrokeErrorColor">?attr/colorError</item>
        <item name="hintTextColor">?attr/colorTextPrimary</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">?attr/colorSurface</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/space_m</item>
        <item name="boxCornerRadiusBottomStart">@dimen/space_m</item>
        <item name="boxCornerRadiusTopEnd">@dimen/space_m</item>
        <item name="boxCornerRadiusTopStart">@dimen/space_m</item>
        <item name="endIconTint">@color/text_input_stroke_color</item>
        <item name="errorIconDrawable">@drawable/alert_triangle</item>
        <item name="errorIconTint">?attr/colorError</item>
        <item name="prefixTextColor">?attr/colorTextSecondary</item>
        <item name="suffixTextColor">?attr/colorTextSecondary</item>
    </style>

    <style name="Widget.BloodBank.TextInputLayout.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/text_input_stroke_color</item>
        <item name="endIconTint">@color/text_input_stroke_color</item>
        <item name="hintTextColor">?attr/colorTextPrimary</item>
        <item name="boxBackgroundColor">?attr/colorSurface</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/space_m</item>
        <item name="boxCornerRadiusBottomStart">@dimen/space_m</item>
        <item name="boxCornerRadiusTopEnd">@dimen/space_m</item>
        <item name="boxCornerRadiusTopStart">@dimen/space_m</item>
        <item name="endIconDrawable">@drawable/menu_end_icon</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="Widget.BloodBank.ShapeAppearanceOverlay" parent="">
        <item name="cornerSize">50%</item>
    </style>
    <!--************* -->

    <!-- Text Styles -->
    <style name="TextAppearance.BloodBank.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">?attr/colorTextPrimary</item>
    </style>

    <style name="TextAppearance.BloodBank.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorTextPrimary</item>
    </style>

    <style name="TextAppearance.BloodBank.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorTextPrimary</item>
    </style>

    <style name="TextAppearance.BloodBank.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorTextPrimary</item>
    </style>

    <style name="TextAppearance.BloodBank.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorTextPrimary</item>
    </style>

    <style name="TextAppearance.BloodBank.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorTextPrimary</item>
    </style>

    <style name="TextAppearance.BloodBank.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorTextPrimary</item>
    </style>

    <style name="TextAppearance.BloodBank.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.BloodBank.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.BloodBank.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.020</item>
    </style>
    <!--************* -->

</resources>