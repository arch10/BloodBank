<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BloodBank" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColorDark</item>
        <item name="colorOnPrimary">@color/accentTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColorDark</item>
        <item name="colorOnSecondary">@color/accentTextColor</item>
        <!-- Color Themes -->
        <item name="colorSurface">@color/surfaceColor</item>
        <item name="colorError">@color/errorColor</item>
        <item name="colorOnSurface">@color/primaryTextColor</item>
        <item name="colorOnError">@color/accentTextColor</item>
        <!-- Custom Color Themes -->
        <item name="colorTextPrimary">@color/primaryTextColor</item>
        <item name="colorTextSecondary">@color/secondaryTextColor</item>
        <item name="colorTextAccent">@color/accentTextColor</item>
        <item name="colorTextDisabled">@color/disabledColor</item>
        <item name="colorBorder">@color/borderColor</item>
        <item name="colorSuccess">@color/successColor</item>
        <item name="colorInfo">@color/infoColor</item>
        <item name="colorWarn">@color/warnColor</item>
        <!-- Widget Themes -->
        <item name="materialButtonStyle">@style/Widget.BloodBank.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.BloodBank.Button.Outlined</item>
        <!-- Text Themes -->
        <item name="textAppearanceHeadline4">@style/TextAppearance.BloodBank.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.BloodBank.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.BloodBank.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.BloodBank.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.BloodBank.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.BloodBank.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.BloodBank.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.BloodBank.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.BloodBank.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.BloodBank.Overline</item>
    </style>

</resources>