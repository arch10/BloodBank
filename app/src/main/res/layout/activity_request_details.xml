<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.requestdetail.RequestDetails">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:backgroundTint="?attr/colorSurface">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationContentDescription="Back"
            app:navigationIcon="@drawable/arrow_left"
            app:title="@string/request_details" />
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_xl"
                android:layout_marginStart="@dimen/space_l"
                android:layout_marginEnd="@dimen/space_l"
                android:layout_marginTop="@dimen/space_l"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/space_l"
                    android:paddingTop="@dimen/space_l"
                    android:paddingEnd="@dimen/space_l"
                    android:paddingBottom="@dimen/space_xl">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:shapeAppearanceOverlay="@style/Widget.BloodBank.ShapeAppearanceOverlay"
                        app:srcCompat="@drawable/default_profile"
                        app:strokeColor="?attr/colorTextDisabled"
                        app:strokeWidth="2dp"
                        android:padding="2dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_l"
                        android:layout_marginEnd="@dimen/space_m"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        app:layout_constraintBottom_toTopOf="@id/created"
                        app:layout_constraintEnd_toStartOf="@+id/bloodType"
                        app:layout_constraintStart_toEndOf="@id/dp"
                        app:layout_constraintTop_toTopOf="@id/dp"
                        tools:text="Jenny Wilson" />

                    <TextView
                        android:id="@+id/created"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_l"
                        android:layout_marginEnd="@dimen/space_m"
                        android:textAppearance="?attr/textAppearanceCaption"
                        app:layout_constraintBottom_toBottomOf="@id/dp"
                        app:layout_constraintEnd_toStartOf="@+id/bloodType"
                        app:layout_constraintStart_toEndOf="@id/dp"
                        app:layout_constraintTop_toBottomOf="@id/name"
                        tools:text="4 hrs" />

                    <TextView
                        android:id="@+id/bloodType"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/blood_type_bg"
                        android:gravity="center"
                        android:textAppearance="?attr/textAppearanceButton"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintBottom_toBottomOf="@+id/dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/dp"
                        tools:text="A+" />

                    <TextView
                        android:id="@+id/expiry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textColor="?attr/colorTextDisabled"
                        android:textAppearance="?attr/textAppearanceCaption"
                        app:layout_constraintEnd_toEndOf="@+id/bloodType"
                        app:layout_constraintStart_toStartOf="@+id/dp"
                        app:layout_constraintTop_toBottomOf="@+id/dp"
                        tools:text="Valid till 10th September" />

                    <TextView
                        android:id="@+id/desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_l"
                        android:textAppearance="?attr/textAppearanceBody2"
                        app:layout_constraintEnd_toEndOf="@+id/expiry"
                        app:layout_constraintStart_toStartOf="@+id/expiry"
                        app:layout_constraintTop_toBottomOf="@+id/expiry"
                        tools:text="Hello"/>

                    <View
                        android:id="@+id/view"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="12dp"
                        android:background="?attr/colorBorder"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/desc" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/map_pin"
                        app:tint="?attr/colorTextPrimary"
                        app:layout_constraintStart_toStartOf="@+id/view"
                        app:layout_constraintTop_toBottomOf="@+id/view" />

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_m"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?attr/colorTextSecondary"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView"
                        app:layout_constraintEnd_toEndOf="@+id/view"
                        app:layout_constraintStart_toEndOf="@+id/imageView"
                        app:layout_constraintTop_toTopOf="@+id/imageView"
                        tools:text="ABC Hospital, Navi Mumbai" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/callBtn"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginStart="@dimen/space_l"
                android:layout_marginEnd="@dimen/space_l"
                android:layout_marginBottom="@dimen/space_l"
                android:text="@string/call" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>